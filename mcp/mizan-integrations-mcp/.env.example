# ==========================================
# MIZAN INTEGRATIONS MCP SERVER CONFIGURATION
# ==========================================

# Server Settings
MCP_SERVER_NAME=mizan-integrations-mcp
MCP_SERVER_VERSION=1.0.0
NODE_ENV=development
LOG_LEVEL=info

# Authentication
MCP_SERVICE_ACCOUNT_TOKEN=<JWT token from Mizan backend>
JWT_SECRET=<same as backend JWT_SECRET>

# SendGrid Email Configuration
SENDGRID_API_KEY=<your-sendgrid-api-key>
SENDGRID_FROM_EMAIL=noreply@mizan.ai
SENDGRID_FROM_NAME=Mizan Platform

# Email Limits
EMAIL_RATE_LIMIT_PER_MINUTE=60
EMAIL_SIZE_LIMIT_KB=100
EMAIL_RECIPIENT_WARNING_THRESHOLD=50
REQUIRE_EMAIL_CONFIRMATION=true

# Storage Configuration
STORAGE_PROVIDER=s3
AWS_ACCESS_KEY_ID=<your-aws-access-key>
AWS_SECRET_ACCESS_KEY=<your-aws-secret-key>
AWS_REGION=us-east-1
S3_BUCKET=mizan-storage

# Logging
LOG_FILE_PATH=/var/log/mizan/mcp-integrations.log
