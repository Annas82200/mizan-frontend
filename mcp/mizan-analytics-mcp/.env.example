# ==========================================
# MIZAN ANALYTICS MCP SERVER CONFIGURATION
# ==========================================

# Server Settings
MCP_SERVER_NAME=mizan-analytics-mcp
MCP_SERVER_VERSION=1.0.0
NODE_ENV=development
LOG_LEVEL=info

# Authentication
MCP_SERVICE_ACCOUNT_TOKEN=<JWT token from Mizan backend>
MCP_ALLOWED_TENANT_IDS=tenant-uuid-1,tenant-uuid-2
JWT_SECRET=<same as backend JWT_SECRET>

# Backend Connection
BACKEND_CONNECTION_MODE=direct
DATABASE_URL=postgresql://postgres:password@localhost:5432/mizan

# AI Agent Configuration (for Three-Engine Analysis)
ANTHROPIC_API_KEY=<your-anthropic-api-key>

# Export Configuration
ALLOWED_FILE_EXPORT_FORMATS=csv,json
MAX_EXPORT_ROWS=10000

# Rate Limiting
TOOL_RATE_LIMIT_PER_MINUTE=60
TOOL_RATE_LIMIT_PER_HOUR=500

# Logging
LOG_FILE_PATH=/var/log/mizan/mcp-analytics.log
